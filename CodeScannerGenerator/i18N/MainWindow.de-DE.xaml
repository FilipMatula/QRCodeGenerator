<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    
    <sys:String x:Key="ResourceDictionaryName">Loc-en-US</sys:String>

    <!--Main menu-->
    <sys:String x:Key="Scan">Scan</sys:String>
    <sys:String x:Key="Generate">Generieren</sys:String>
    <sys:String x:Key="Settings">Einstellungen</sys:String>

    <!-- Tray -->
    <sys:String x:Key="BalloonTipText">Die App wurde minimiert. Doppelklicken Sie auf das Tray-Symbol, um es anzuzeigen.</sys:String>
    <sys:String x:Key="BalloonTipTittle">Codescanner und Generator</sys:String>
    <sys:String x:Key="Exit">Ausgang</sys:String>
    <sys:String x:Key="Show">Show</sys:String>

    <!--Popuops-->
    <sys:String x:Key="NoDeviceTitle">Kein Gerät vorhanden</sys:String>
    <sys:String x:Key="NoDeviceMessage">Es ist kein Videogerät vorhanden. Bitte schließen Sie das Videogerät an.</sys:String>
    <sys:String x:Key="DeviceChangedTitle">Videogerät gewechselt</sys:String>
    <sys:String x:Key="DeviceChangedMessage">Das Videogerät wurde angeschlossen oder getrennt. Das Programm aktualisiert die verfügbaren Geräte.</sys:String>
</ResourceDictionary>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    
    <sys:String x:Key="ResourceDictionaryName">Loc-en-US</sys:String>

    <!--Main menu-->
    <sys:String x:Key="Scan">Scan</sys:String>
    <sys:String x:Key="Generate">Generate</sys:String>
    <sys:String x:Key="Settings">Settings</sys:String>

    <!-- Tray -->
    <sys:String x:Key="BalloonTipText">The app has been minimised. Double click the tray icon to show.</sys:String>
    <sys:String x:Key="BalloonTipTittle">Code Scanner and Generator</sys:String>
    <sys:String x:Key="Exit">Exit</sys:String>
    <sys:String x:Key="Show">Show</sys:String>
    
    <!--Popuops-->
    <sys:String x:Key="NoDeviceTitle">No device available</sys:String>
    <sys:String x:Key="NoDeviceMessage">There is no video device available. Please plug video device.</sys:String>
    <sys:String x:Key="DeviceChangedTitle">Video device changed</sys:String>
    <sys:String x:Key="DeviceChangedMessage">Video device connected or disconnected. Program will refresh available devices.</sys:String>
</ResourceDictionary>